<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="reversifx.MenuController"
          alignment="center"
          hgap="10"
          vgap="10">

    <padding>
        <Insets
            top="25"
            right="25"
            bottom="10"
            left="25">
        </Insets>
    </padding>
    

    <Text text="Menu" 
          GridPane.rowIndex="0"/>

    <HBox alignment= "center"
          GridPane.rowIndex="1">
        <Button text="Settings" onAction="#settings"/>
    </HBox>

    <HBox alignment= "center"
          GridPane.rowIndex="2">
        <Button text="Start" onAction="#startGame"/>
    </HBox>

</GridPane>